{
    "name": "hizpark/file-uploader",
    "description": "A flexible, decoupled file upload library with customizable validation and scoped storage management for secure and maintainable uploads.",
    "keywords": [
        "file-upload",
        "uploader",
        "validator",
        "scoped-check"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Harper Jang",
            "email": "harper.jang@outlook.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "hizpark/scoped-storage-strategy": "^2.0",
        "hizpark/validation-interface": "^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.75",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpunit/phpunit": "^11.5"
    },
    "autoload": {
        "psr-4": {
            "Hizpark\\FileUploader\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hizpark\\FileUploader\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "stan": "phpstan analyse",
        "cs:fix": "php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes --format=txt",
        "cs:chk": "composer run cs:fix -- --diff --verbose --dry-run",
        "test": "phpunit --testdox --stop-on-failure",
        "test:coverage": "XDEBUG_MODE=coverage phpunit --testdox --coverage-html .phpunit_coverage"
    }
}
